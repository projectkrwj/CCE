{
  "name": "Ubuntu 20.04 + pwntools + GEF",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools",
    "ms-python.python"
  ],
  "postCreateCommand": "echo 'source ~/.gef.rc' >> ~/.gdbinit",
  "remoteUser": "root"
}
